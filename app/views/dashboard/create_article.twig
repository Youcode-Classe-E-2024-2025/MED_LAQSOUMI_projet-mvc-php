{% extends "layouts/base.twig" %}

{% block title %}Create Article - MVC Framework{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <i class="bi bi-file-earmark-plus me-2 text-primary"></i>
                <h4 class="mb-0">Create New Article</h4>
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        {{ error is iterable ? error|join(', ') : error }}
                    </div>
                {% endif %}
                
                <form method="POST" action="/dashboard/article/create">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
                    
                    <div class="mb-4">
                        <label for="title" class="form-label">
                            <i class="bi bi-type-h1 me-2"></i>Title
                        </label>
                        <input type="text" class="form-control form-control-lg" id="title" 
                               name="title" value="{{ old.title }}" 
                               placeholder="Enter article title" required>
                    </div>
                    
                    <div class="mb-4">
                        <label for="content" class="form-label">
                            <i class="bi bi-text-paragraph me-2"></i>Content
                        </label>
                        <textarea class="form-control" id="content" name="content" 
                                  rows="12" placeholder="Write your article content here..." 
                                  required>{{ old.content }}</textarea>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Write your article content using clear paragraphs. You can make it as long as you need.
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3">
                        <a href="/dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                        <button type="submit" class="btn btn-primary ms-auto">
                            <i class="bi bi-check-lg me-2"></i>Create Article
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
